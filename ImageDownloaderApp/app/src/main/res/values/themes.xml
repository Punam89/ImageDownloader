    <style name="Theme.ImageDownloaderApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">#0465B1</item>
        <item name="colorPrimary">#0465B1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
